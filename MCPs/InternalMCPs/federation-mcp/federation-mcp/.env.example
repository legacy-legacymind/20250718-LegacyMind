# Federation MCP Configuration
# Copy this file to .env and adjust values as needed

# Timeout settings (in milliseconds)
CCMCP_TIMEOUT=120000
GMCP_TIMEOUT=300000
PARALLEL_TIMEOUT=180000

# Fallback settings
FALLBACK_ENABLED=true

# Debug and logging
DEBUG_MODE=false
NODE_ENV=production

# Agent configuration
CCMCP_ENDPOINT=stdio
GMCP_EXECUTABLE=gemini

# Performance settings
MAX_CONCURRENT_TASKS=5
TASK_QUEUE_SIZE=10

# Error handling
MAX_RETRIES=3
RETRY_DELAY=1000

# Security settings
ENABLE_SANDBOX=true
SANDBOX_TIMEOUT=60000