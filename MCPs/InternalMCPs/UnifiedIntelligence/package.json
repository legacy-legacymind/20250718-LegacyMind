{
  "name": "unified-intelligence",
  "version": "1.0.0",
  "description": "The core reasoning and thinking layer for the Federation.",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "unified-intelligence": "src/index.js",
    "unified-intelligence-connector": "src/connector.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "start:server": "pm2 start ecosystem.config.js",
    "stop:server": "pm2 stop unified-intelligence",
    "restart:server": "pm2 restart unified-intelligence",
    "logs:server": "pm2 logs unified-intelligence",
    "status:server": "pm2 status",
    "connector": "node src/connector.js",
    "test": "node test.js",
    "test:watch": "nodemon test.js",
    "docker:build": "docker build -t unified-intelligence .",
    "docker:run": "docker run --rm unified-intelligence"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "unified-intelligence",
    "federation",
    "llm",
    "ai",
    "reasoning"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/legacymind/unified-intelligence-mcp.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.14.0",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.16.0",
    "pm2": "^5.3.0",
    "uuid": "^9.0.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "author": "LegacyMind Federation",
  "license": "ISC"
}
