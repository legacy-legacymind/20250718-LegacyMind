FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements-embedding-service.txt .
RUN pip install --no-cache-dir -r requirements-embedding-service.txt

# Install additional dependencies for fallback support
RUN pip install groq

# Copy application files
COPY background_embedding_service.py .
COPY minimal_embedding_processor.py .
COPY simple_embeddings.py .
COPY embedding_service_with_fallback.py .
COPY config.yaml .

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV INSTANCE_ID=Claude

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python3 -c "import redis; r = redis.Redis(host='redis', port=6379); r.ping()"

# Run the service
CMD ["python3", "minimal_embedding_processor.py"]